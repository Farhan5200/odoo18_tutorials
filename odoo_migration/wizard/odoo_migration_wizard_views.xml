<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="odoo_migration_wizard_form_view" model="ir.ui.view">
        <field name="name">odoo_migration.wizard.form.view</field>
        <field name="model">odoo.migration.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group string="From">
                        <field name="url_db1"/>
                        <field name="db_1"/>
                        <field name="username_db_1"/>
                        <field name="password_db_1" password="True"/>
                    </group>
                    <group string="To">
                        <field name="url_db2"/>
                        <field name="db_2"/>
                        <field name="username_db_2"/>
                        <field name="password_db_2" password="True"/>
                    </group>
                </group>
                <footer>
                    <button name="migrate_odoo" string="Migrate" type="object"
                            class="oe_highlight"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="odoo_migration_wizard_action" model="ir.actions.act_window">
        <field name="name">Odoo Migration</field>
        <field name="res_model">odoo.migration.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="odoo_migration_wizard_menu" action="odoo_migration_wizard_action" name="Migration"
              parent="purchase.menu_purchase_root" sequence="100"/>
</odoo>
